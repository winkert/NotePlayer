<Window x:Class="NotePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotePlayer"
        mc:Ignorable="d"
        Title="Note Player" Height="350" Width="350">
    <Grid>
        <TextBox x:Name="txt_History" HorizontalAlignment="Left" Height="276" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322" IsEnabled="False"/>
        <TextBox x:Name="txt_Input" HorizontalAlignment="Left" Height="18" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" CharacterCasing="Lower" TextChanged="txt_Input_TextInput"/>
    </Grid>
</Window>
